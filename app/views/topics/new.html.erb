<h1>Topics</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @topic do |f| %>
      <div class="form-group">
        <%= f.label :topic %>
        <%= f.text_area :name, class: 'form-control', placeholder: "Enter Topic name" %>
      </div>

      <div class="form-group" %>
        <%= f.submit "Save", class: 'btn btn-success' %>
      <% end %>
     </div>
    </div> 